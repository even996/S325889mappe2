<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_main_title"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:textStyle="bold"/>
    <Toolbar
        android:id="@+id/mintoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:alpha="0.9"
        android:layout_marginTop="415dp">

        <ImageButton
            android:id="@+id/friends_image_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/friendsicon"/>
        <ImageButton
            android:id="@+id/resturant_image_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/dinnericon"/>

        <ImageButton
            android:id="@+id/order_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/ordericon"/>

        <ImageButton
            android:id="@+id/settings_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/settingsicon"/>
    </Toolbar>
</LinearLayout>