<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dinner"
    >

  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Resturant"
      android:textSize="40sp"
      android:textStyle="bold"
      android:textColor="#FFFFFF"
      android:textAlignment="center"

      />


  <RelativeLayout
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
      android:layout_width="180dp"
      android:layout_marginTop="10dp"
      android:layout_marginStart="30dp"
      android:layout_height="30dp"
      android:text="NAME:"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="#FFFFFF"
      />

    <TextView
        android:layout_marginStart="220dp"
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:text="ADRESS:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>


  <ListView
      android:id="@+id/listView_resturante"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_marginTop="10dp"
      />





    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="220dp"
        android:id="@+id/add_image_button"
        android:background="@drawable/add"
        android:alpha="0.8"
        />

  <Toolbar
      android:id="@+id/mintoolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#80FFFFFF"
      android:alpha="0.9"
      android:layout_marginTop="35dp">

    <ImageButton
        android:id="@+id/friends_image_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/friendsicon"/>
    <ImageButton
        android:id="@+id/resturant_image_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/dinnericon"/>

    <ImageButton
        android:id="@+id/order_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/ordericon"/>

    <ImageButton
        android:id="@+id/settings_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/settingsicon"/>
  </Toolbar>







</LinearLayout>